   <%= javascript_tag do %>
        window.onload=init;
        
        function init(){
        
        var newstitles = document.getElementsByClassName("newstitle");   
        var newsimgs   = document.getElementsByClassName("newsimg");
        var newscontents = document.getElementsByClassName("newscontent");
        var newsdates   = document.getElementsByClassName("newsdate");
        
        i=0;
        <% @infos.each do |info| %>
        newstitles[i].innerHTML = "<strong><%= info.title %></strong>";
        newsimgs[i].style.backgroundImage="url(https://mocca-giftfinder.herokuapp.com/infos/<%= info.id %>/img)";
        newscontents[i].innerHTML= "<%= info.content %>";
        newsdates[i].innerHTML = "<%= info.created_at.year %>-<%= info.created_at.month %>-<%= info.created_at.day %>";
        i++;
        <% end %>
    }
        
    <% end %>
