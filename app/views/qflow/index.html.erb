  <script>
    
  $(document).ready(function(){
     $('.menu-n > a').hover(
         function(){
             $( '.n_description' ).fadeIn();
         },
         function(){
             $( '.n_description' ).fadeOut();
         }
     );
     
     $('.menu-i > a').hover(
         function(){
             $( '.i_description' ).fadeIn();
         },
         function(){
             $( '.i_description' ).fadeOut();
         }
     );
     
     $('.choice').on('click', 
         function(e){
             e.preventDefault();
             $('#qtext').removeClass().addClass('fadeIn'+' animated').one('webkitAnimationEnd mozAnimationEnd MSAnimationEnd oanimationend animationend', function(){
               $(this).removeClass();
         });
        }
      );
              
  });

